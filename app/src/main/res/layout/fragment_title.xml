<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".trivia.fragments.TitleFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/normal_32dp"
            android:src="@drawable/happy_android" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/small_20dp"
            android:fontFamily="@font/roboto"
            android:text="@string/android_trivia"
            android:textSize="@dimen/text_size_30sp" />

        <Button
            android:id="@+id/play_btn"
            style="@style/CommonBtnStyle"
            android:text="@string/play_button" />

    </LinearLayout>
</layout>